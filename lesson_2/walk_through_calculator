puts "Type a number"
num = gets.chomp.to_f
puts "Type a second number"
num2 = gets.chomp.to_f
puts "What would you like to do? Type 'add', 'subtract', 'multiply', or 'divide'"
input = gets.chomp.downcase

case input 
    when 'add'
      result = num + num2 
      puts "your addition result is: #{result}"
    when 'subtract'
      result = num - num2
      puts "your subtraction result is #{result}"
    when 'multiply'
      result = num * num2
      puts "your multiplication result is #{result}"
    when 'divide'
      if num2 == 0 
        puts "error, cannot divide by 0"
      else 
        result = num / num2
        puts "your division result is: #{result}"
      end
else puts "error, try again"
end 